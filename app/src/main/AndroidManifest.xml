<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.examples.finaleproject">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/books"
        android:label="@string/app_name"
        android:roundIcon="@drawable/books"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinaleProject">
        <activity
            android:name=".ui.SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BookEdit"
            android:label="@string/et_Book_title" />
        <activity android:name=".ui.BookDetails"

            />
        <activity
            android:name=".ui.BooksShow"
            android:parentActivityName=".ui.Library"

            />
        <activity
            android:name=".ui.CreateCategory"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/tv_create_Cat"/>
        <activity
            android:name=".ui.CreateBook"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/tv_createB"
            />
        <activity
            android:name=".ui.Favorites"
            android:parentActivityName=".ui.MainActivity"
            android:label="@string/tv_favorites"
            />
        <activity
            android:name=".ui.Library"
            android:label="@string/library_title"
            android:parentActivityName=".ui.MainActivity" />
        <activity android:name=".ui.MainActivity">

        </activity>
    </application>

</manifest>